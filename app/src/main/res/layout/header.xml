<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/username"
        android:id="@+id/textUsername"
        android:layout_alignTop="@+id/imageAvatar"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_toEndOf="@+id/imageAvatar"
        android:gravity="center" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_account_circle_black_48px"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:contentDescription="@string/avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/loading_collection"
        android:id="@+id/textInCollection"
        android:layout_below="@+id/textUsername"
        android:layout_alignLeft="@+id/textUsername"
        android:layout_alignStart="@+id/textUsername"
        android:gravity="center" />
</RelativeLayout>