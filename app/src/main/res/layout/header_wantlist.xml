<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading_wantlist"
        android:id="@+id/textWantlist"
        android:layout_alignTop="@+id/imageAvatar"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_toEndOf="@+id/imageAvatar"
        android:gravity="center" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageAvatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_favorite_white_48px"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:contentDescription="@string/avatar"
        android:tint="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textInWantlist"
        android:layout_below="@+id/textWantlist"
        android:layout_alignLeft="@+id/textWantlist"
        android:layout_alignStart="@+id/textWantlist"
        android:gravity="center" />
</RelativeLayout>